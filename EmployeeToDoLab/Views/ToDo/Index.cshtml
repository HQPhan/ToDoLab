@model IEnumerable<ToDo>

@{
    ViewData["Title"] = "Things To Do";
}

<h1>To Do List</h1>
@foreach (ToDo td in Model)
{
    <div style="border: solid 2px black">
        <p>Name: @td.Name </p>
        <p>Description: @td.Description </p>
        <p>Assigned To: @td.AssignedTo</p>
        <p>Hours Needed: @td.HoursNeeded</p>
        <p>Is Completed: @td.IsCompleted</p>

        <a asp-action="Details" asp-controller="ToDo" asp-route-id="@td.Id">More Details</a><br />
